<Application x:Class="Lotus.App.CAD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lotus.CAD"
             StartupUri="LotusMainWindow.xaml">
    <Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>

				<!--Обязательно погружаем ресурсы для Fluent-->
				<ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml" />

				<!--Обязательно погружаем ресурсы для дополнительных элементов управления-->
				<ResourceDictionary Source="pack://application:,,,/Lotus.Windows.CAD;Component/Themes/Generic.xaml" />

				<!--Подключаем внутренние ресурсы-->


			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
